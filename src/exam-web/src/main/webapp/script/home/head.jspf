				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						${menu.name }
						<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<c:forEach var="subMenu" items="${menu.children }">
